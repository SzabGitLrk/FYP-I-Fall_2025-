<% layout("/layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Volunteer Dashboard | ShareMyFood</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(145deg, #e8f5e9, #ffffff);
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .dashboard-title {
      font-weight: 800;
      color: #157347;
      letter-spacing: 1px;
    }

    .summary-card {
      border-radius: 18px;
      background: #ffffff;
      padding: 20px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      margin-bottom: 2rem;
    }

    .card-action {
      border-radius: 18px;
      background: #ffffff;
      padding: 25px;
      box-shadow: 0 5px 18px rgba(0,0,0,0.1);
      transition: 0.3s ease;
      text-align: center;
    }

    .card-action:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
      background: linear-gradient(180deg, #f4fff5, #ffffff);
    }

    .card-action h5 {
      font-weight: 700;
      color: #155d39;
    }

    .card-action a {
      text-decoration: none;
      color: #157347;
      font-weight: 600;
      font-size: 1.05rem;
    }

    .stat-icon {
      font-size: 2.4rem;
      color: #157347;
      margin-bottom: 10px;
    }

    .btn-logout {
      border-radius: 10px;
      padding: 10px 25px;
      font-weight: 600;
    }
  </style>
</head>

<body>
  <div class="container mt-5">

    <!-- Title -->
    <h2 class="text-center mb-5 dashboard-title">ü§ù VOLUNTEER Dashboard</h2>

    <!-- Summary Card -->
    <div class="summary-card">
      <h4 class="mb-3" style="color:#157347; font-weight:700;">
        Welcome, <%= volunteer.name %> üëã
      </h4>
      <p class="mb-1"><strong>City:</strong> <%= volunteer.city %></p>
      <p class="mb-1"><strong>Assigned NGO:</strong> <%= volunteer.ngo_id.ngo_name %></p>
      <p class="mb-0"><strong>Email:</strong> <%= volunteer.email %></p>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">

      <div class="col-md-4 col-sm-6 mb-3">
        <div class="card-action">
          <div class="stat-icon">üìã</div>
          <h5>Assigned Tasks</h5>
          <div class="stat-number"><%= stats.assigned %></div>
        </div>
      </div>

      <div class="col-md-4 col-sm-6 mb-3">
        <div class="card-action">
          <div class="stat-icon">üîÑ</div>
          <h5>In Progress</h5>
          <div class="stat-number"><%= stats.inProgress %></div>
        </div>
      </div>

      <div class="col-md-4 col-sm-6 mb-3">
        <div class="card-action">
          <div class="stat-icon">‚úÖ</div>
          <h5>Completed</h5>
          <div class="stat-number"><%= stats.completed %></div>
        </div>
      </div>

    </div>

    <!-- Action Cards -->
    <div class="row mt-4">

      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üßæ My Tasks</h5>
          <a href="/volunteer/tasks">View Assigned Tasks</a>
        </div>
      </div>

      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üìú Task History</h5>
          <a href="/volunteer/task-history">View Completed Tasks</a>
        </div>
      </div>

      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üë§ Edit Profile</h5>
          <a href="/volunteer/profile">Edit Information</a>
        </div>
      </div>

    

    </div>

    <!-- Logout -->
    <div class="text-center mt-5 mb-4">
      <form action="/volunteer_logout" method="POST">
        <button type="submit" class="btn btn-outline-success btn-logout">
          Logout
        </button>
      </form>
    </div>

  </div>
</body>
</html>

