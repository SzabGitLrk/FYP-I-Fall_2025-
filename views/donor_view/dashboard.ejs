<% layout("/layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Donor Dashboard | ShareMyFood</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(145deg, #e8f5e9, #ffffff);
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .dashboard-title {
      font-weight: 800;
      color: #157347;
      letter-spacing: 1px;
    }

    .summary-card {
      border-radius: 18px;
      background: #ffffff;
      padding: 20px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      margin-bottom: 2rem;
    }

    .card-action {
      border-radius: 18px;
      background: #ffffff;
      padding: 25px;
      box-shadow: 0 5px 18px rgba(0,0,0,0.1);
      transition: 0.3s ease;
      text-align: center;
    }

    .card-action:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
      background: linear-gradient(180deg, #f4fff5, #ffffff);
    }

    .card-action h5 {
      font-weight: 700;
      color: #155d39;
    }

    .card-action a {
      text-decoration: none;
      color: #157347;
      font-weight: 600;
      font-size: 1.1rem;
    }

    .stat-icon {
      font-size: 2.4rem;
      color: #157347;
      margin-bottom: 10px;
    }

    .stat-number {
      font-size: 1.7rem;
      font-weight: 800;
      color: #155d39;
    }

    .btn-logout {
      border-radius: 10px;
      padding: 10px 25px;
      font-weight: 600;
    }

    ul.stats-list {
      list-style: none;
      padding-left: 0;
    }

    ul.stats-list li {
      margin-bottom: 5px;
    }

  </style>
</head>

<body>
  <div class="container mt-5">

    <!-- Title -->
    <h2 class="text-center mb-5 dashboard-title">üåø DONOR Dashboard</h2>

    <!-- Summary Card -->
    <div class="summary-card">
      <h4 class="mb-3" style="color:#157347; font-weight:700;">Welcome, <%= donor.name %> üëã</h4>
      <p class="mb-1"><strong>City:</strong> <%= donor.city %></p>
      <p class="mb-1"><strong>Organization Type:</strong> <%= donor.organizationType %></p>
      <p class="mb-0"><strong>Email:</strong> <%= donor.email %></p>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
      <div class="col-md-3 col-sm-6">
        <div class="card-action">
          <div class="stat-icon">üì¶</div>
         
          <div>
            <ul>
              <li><a href="/donor/total-donations">View Your Donations</a></li>
          <li>Total Donations:  <%= donor.total_donations%></li>
          </ul>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Main Action Cards -->
    <div class="row mt-4">
      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üç≤ Donate Food</h5>
          <a href="/donate-food">Add Donation</a>
        </div>
      </div>

      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üìÑ Edit Profile</h5>
          <a href="/donor/edit-info">Edit Information</a>
        </div>
      </div>

      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üîë Change Password</h5>
          <a href="/donor/change-password">Update Password</a>
        </div>
      </div>

      <div class="col-md-4 mb-3">
        <div class="card-action">
          <h5>üìò Donation History</h5>
          <a href="/donations-history">View History</a>
        </div>
      </div>
    </div>

    <!-- Logout Button -->
    <div class="text-center mt-5 mb-4">
      <form action="/donor_logout" method="post">
        <button type="submit" class="btn btn-outline-success btn-logout">Logout</button>
      </form>
    </div>

  </div>
</body>
</html>
