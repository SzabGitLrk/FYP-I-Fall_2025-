<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <h3 class="text-success mb-4 fw-bold">üç≤ Donate Food</h3>

  <form action="/donate-food" method="POST" class="p-4 bg-white shadow rounded">

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Food Title</label>
      <input type="text" name="food_title" class="form-control" placeholder="e.g., Fresh Sandwiches" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Quantity</label>
      <input type="text" name="quantity" class="form-control" placeholder="e.g., 20 meals or 5 kg" required>
    </div>

   
    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Pickup Address</label>
      <input type="text" name="pickup_address" class="form-control" placeholder="Your address" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Pickup City</label>
      <input type="text" name="pickup_city" class="form-control" placeholder="City" required>
    </div>

    <!-- Submit Donation Button -->
    <button class="btn btn-success w-100 fw-bold">Submit Donation</button>

    <!-- Back to Dashboard Button -->
    <div class="mt-3 text-center">
      <a href="/donor/dashboard" class="btn btn-outline-success px-4">‚Üê Back to Dashboard</a>
    </div>

  </form>
</div>

<style>
  body {
    background: linear-gradient(135deg, #e8f5e9, #ffffff);
    font-family: 'Segoe UI', sans-serif;
  }

  form {
    max-width: 600px;
    margin: 0 auto;
    border-radius: 15px;
  }

  .form-control:focus, .form-select:focus {
    border-color: #157347;
    box-shadow: 0 0 5px rgba(21, 115, 71, 0.3);
  }
</style>
