<% layout("/layouts/boilerplate") %>

<body class="bg-light">

  <section class="py-5 text-center">
    <div class="container">
      <h2 class="fw-bold text-success mb-3">Contact Us</h2>
      <p class="lead mb-5">
        Have a question, idea, or want to collaborate?  
