<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <h3 class="text-success mb-4 fw-bold">üîë Change Password</h3>

  <form action="/ngo/change-password" method="POST" class="p-4 bg-white shadow rounded">

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Old Password</label>
      <input type="password" name="old_password" class="form-control" placeholder="Enter old password" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">New Password</label>
      <input type="password" name="new_password" class="form-control" placeholder="Enter new password" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Confirm New Password</label>
      <input type="password" name="confirm_password" class="form-control" placeholder="Confirm new password" required>
    </div>

    <!-- Update Password Button -->
    <button class="btn btn-success w-100 fw-bold">Update Password</button>

    <!-- Back to Dashboard Button -->
    <div class="mt-3 text-center">
      <a href="/ngo/dashboard" class="btn btn-outline-success px-4">‚Üê Back to Dashboard</a>
    </div>

  </form>
</div>

<style>




  body {
    background: linear-gradient(135deg, #e8f5e9, #ffffff);
    font-family: 'Segoe UI', sans-serif;
  }

  form {
    max-width: 500px;
    margin: 0 auto;
    border-radius: 15px;
  }

  .form-control:focus {
    border-color: #157347;
    box-shadow: 0 0 5px rgba(21, 115, 71, 0.3);
  }
</style>
