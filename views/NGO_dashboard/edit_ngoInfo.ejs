<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <h3 class="text-success mb-4 fw-bold">Edit NGO Profile</h3>

  <% if (locals.error && locals.error.length > 0) { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <% if (locals.success && locals.success.length > 0) { %>
    <div class="alert alert-success">
      <%= success %>
    </div>
  <% } %>

  <form action="/edit-ngo" method="POST" class="p-4 bg-white shadow rounded">

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">NGO Name</label>
      <input type="text" name="ngo_name" class="form-control" value="<%= ngo.ngo_name %>" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Contact Number</label>
      <input type="text" name="contact_number" class="form-control" value="<%= ngo.contact_number %>" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Address</label>
      <textarea name="address" class="form-control" required><%= ngo.address %></textarea>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Head Person Name</label>
      <input type="text" name="head_person_name" class="form-control" value="<%= ngo.head_person_name %>" required>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold text-success">Head Person Contact</label>
      <input type="text" name="head_person_contact" class="form-control" value="<%= ngo.head_person_contact %>" required>
    </div>

    <!-- Update Button -->
    <button class="btn btn-success w-100 mt-3 fw-bold">Update Profile</button>

    <!-- Back / Change Password Buttons -->
    <div class="mt-3 text-center d-flex justify-content-center gap-2">
      <a href="/ngo/change-password" class="btn btn-outline-success px-4">Change Password</a>
      <a href="/ngo/dashboard" class="btn btn-outline-success px-4">‚Üê Back to Dashboard</a>
    </div>

  </form>
</div>

<style>
  body {
    background: linear-gradient(135deg, #e8f5e9, #ffffff);
    font-family: 'Segoe UI', sans-serif;
  }

  form {
    max-width: 600px;
    margin: 0 auto;
    border-radius: 15px;
  }

  .form-control:focus, .form-select:focus, textarea:focus {
    border-color: #157347;
    box-shadow: 0 0 5px rgba(21, 115, 71, 0.3);
  }

  .btn-success, .btn-outline-success {
    font-weight: 600;
    border-radius: 10px;
    padding: 10px 20px;
    transition: 0.2s;
  }

  .btn-success:hover {
    background-color: #146c43;
  }

  .d-flex.gap-2 a {
    min-width: 160px;
  }
</style>
