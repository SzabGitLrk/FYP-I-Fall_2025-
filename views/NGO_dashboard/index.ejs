<% layout("/layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NGO Dashboard | ShareMyFood</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(145deg, #e8f5e9, #ffffff);
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .dashboard-title {
      font-weight: 800;
      color: #157347;
      letter-spacing: 1px;
    }

    .main-card {
      border-radius: 18px;
      background: #ffffff;
      padding: 25px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.08);
      transition: 0.3s ease;
      text-align: center;
      min-height: 280px;
    }

    .main-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      background: linear-gradient(180deg, #f4fff5, #ffffff);
    }

    .card-title {
      font-weight: 700;
      color: #155d39;
      margin-bottom: 1.2rem;
      font-size: 1.35rem;
    }

    .main-card ul {
      list-style: none;
      padding-left: 0;
      color: #333;
      font-size: 1rem;
      text-align: left;
    }

    .main-card ul li {
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .main-card a {
      text-decoration: none;
      color: #157347;
      font-weight: 600;
    }

    .main-card a:hover {
      color: #0c4e2f;
      text-decoration: underline;
    }

    .notification-badge {
      background-color: #dc3545;
      color: white;
      border-radius: 50%;
      padding: 4px 10px;
      font-size: 0.85rem;
      margin-left: auto;
    }

    .btn-logout {
      border-radius: 10px;
      padding: 10px 25px;
      font-weight: 600;
    }

    .card-container {
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
    }
  </style>
</head>

<body>

<div class="container mt-5">

  <!-- Title -->
  <h2 class="text-center mb-5 dashboard-title">ðŸŒ¿ NGO Dashboard</h2>

  <div class="card-container">

    <!-- My Profile Card -->
    <div class="main-card col-md-3 col-sm-6">
      <h5 class="card-title">My Profile</h5>
      <ul>
        <li><a href="/edit-ngo">ðŸ‘¤ Edit NGO Information</a></li>
        <li><a href="/upload-documents">ðŸ“„ Upload Verification Documents</a></li>
        <li><a href="/ngo/available-donations">ðŸ“¦ Available Donations</a></li>
      </ul>
    </div>

    <!-- Volunteers Card -->
    <div class="main-card col-md-3 col-sm-6">
      <h5 class="card-title">Volunteers</h5>
      <ul>
        <li><a href="/generate-invite">âž• Generate Invite Codes</a></li>
        <li><a href="/volunteers">ðŸ‘¥ View Volunteers</a></li>
        <li><a href="/assign-tasks">âœ… Assign Tasks</a></li>
      </ul>
    </div>

    <!-- Claimed Donations Card -->
    <div class="main-card col-md-3 col-sm-6">
      <h5 class="card-title">Claimed Donations</h5>
      <ul>
        <li><a href="/ngo/claimed-donations">ðŸ“¦ View Your Claims</a></li>
        <li>Total Claimed: <%= ngo.claimed_count %></li>
      </ul>
    </div>

    <!-- Notifications Card -->
    <div class="main-card col-md-3 col-sm-6">
      <h5 class="card-title">Notifications</h5>
      <ul>
        <li>
          <a href="/ngo/notifications">ðŸ”” View Notifications</a>
          <% if (unreadCount && unreadCount > 0) { %>
            <span class="notification-badge"><%= unreadCount %></span>
          <% } %>
        </li>
        <li>ðŸ“¬ Stay updated with admin alerts</li>
      </ul>
    </div>

    <!-- NGO Insights Card (Informational) -->
    <div class="main-card col-md-3 col-sm-6">
      <h5 class="card-title">NGO Insights</h5>
      <ul>
        <li>ðŸ‘¥ Volunteers Count: <%= ngo.volunteers_count %></li>
        <li>ðŸ“… Joined On: <%= ngo.created_at.toDateString() %></li>
        <li>ðŸ“§ Contact: <%= ngo.email %></li>
      </ul>
    </div>

  </div>

  <!-- Logout Button -->
  <div class="text-center mt-5 mb-4">
    <form action="/ngo_logout" method="post">
      <button type="submit" class="btn btn-outline-success btn-logout">Logout</button>
    </form>
  </div>

</div>

</body>
</html>
