<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <h3 class="text-success mb-4 fw-bold">ðŸ‘¥ Volunteers</h3>

  <% if (volunteer.length === 0) { %>
    <div class="alert alert-info text-center">
      No volunteers yet. Generate invite codes to onboard volunteers!
    </div>
  <% } else { %>
    <table class="table table-bordered table-hover shadow-sm">
      <thead class="table-success">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>City</th>
          <th>Invite Code Used</th>
          <th>Assigned Tasks</th>
          <th>Status</th>
          <th>Assign Task</th>
        </tr>
      </thead>
      <tbody>
        <% volunteer.forEach(v => { %>
          <tr>
            <td><%= v.name %></td>
            <td><%= v.email %></td>
            <td><%= v.phone %></td>
            <td><%= v.city %></td>
            <td><%= v.invite_code_used %></td>
            <td><%= v.assigned_tasks.length %></td>
            <td><%= v.status %></td>
            <td>
              <% if (v.status === "Active") { %>
                <a href="/assign-tasks?volunteer_id=<%= v._id %>" class="btn btn-primary btn-sm">
                  Assign Task
                </a>
              <% } else { %>
                <span class="text-muted">Cannot assign</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <!-- Back to Dashboard Button -->
  <div class="text-center mt-4">
    <a href="/ngo/dashboard" class="btn btn-outline-success btn-sm">â¬… Back to Dashboard</a>
  </div>
</div>

