  <h3 class="text-success mb-4 fw-bold text-center">ðŸ”‘ Change Password</h3>

  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm form-box">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">Update Password</h5>
        </div>

        <div class="card-body">
          <form action="/edit-admin/change-password" method="POST">

            <!-- Old Password -->
            <div class="mb-3">
              <label class="form-label text-success fw-semibold">Old Password</label>
              <input 
                type="password" 
                name="oldPassword" 
                class="form-control green-input" 
                placeholder="Enter current password"
                required
              >
            </div>

            <!-- New Password -->
            <div class="mb-3">
              <label class="form-label text-success fw-semibold">New Password</label>
              <input 
                type="password" 
                name="newPassword" 
                class="form-control green-input" 
                placeholder="Enter new password"
                required
              >
            </div>

            <!-- Confirm New Password -->
            <div class="mb-3">
              <label class="form-label text-success fw-semibold">Confirm New Password</label>
              <input 
                type="password" 
                name="confirmPassword" 
                class="form-control green-input" 
                placeholder="Re-enter new password"
                required
              >
            </div>

            <button class="btn btn-success w-100 fw-bold green-btn">Update Password</button>
          </form>
        </div>
      </div>

      <div class="text-center mt-3">
        <a href="/edit-admin" class="btn btn-outline-success green-outline-btn">
          Back to Edit Profile
        </a>
      </div>

    </div>
  </div>
</div>

