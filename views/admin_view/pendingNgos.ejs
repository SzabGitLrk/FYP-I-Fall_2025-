<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="text-center mb-4 text-success fw-bold">Pending NGO Registrations</h2>

  <% if (pendingNGOs.length === 0) { %>
    <p class="text-center text-muted">No pending NGOs at the moment.</p>
  <% } else { %>

  <table class="table table-bordered table-striped shadow-sm bg-white">
    <thead class="table-success">
      <tr>
        <th>NGO Name</th>
        <th>Email</th>
        <th>Contact</th>
        <th>License Number</th>   <!-- Added -->
        <th>Registered On</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% pendingNGOs.forEach(ngo => { %>
        <tr>
          <td><%= ngo.ngo_name %></td>
          <td><%= ngo.email %></td>
          <td><%= ngo.contact_number %></td>
          <td><%= ngo.licence_number %></td>  <!-- Added -->
          <td><%= ngo.created_at.toDateString() %></td>

          <td>
            <form action="/approve_ngo/<%= ngo._id %>" method="POST" style="display:inline-block;">
              <button class="btn btn-success btn-sm">Approve</button>
            </form>

            <form action="/reject_ngo/<%= ngo._id %>" method="POST" style="display:inline-block;">
              <button class="btn btn-danger btn-sm">Reject</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% } %>

  <div class="text-center mt-4">
    <a href="/admin/dashboard" class="btn btn-outline-success">Back to Dashboard</a>
  </div>
</div>
