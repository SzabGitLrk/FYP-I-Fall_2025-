<% layout("/layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard | ShareMyFood</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #e8f5e9, #ffffff);
      font-family: 'Segoe UI', sans-serif;
      min-height: 100vh;
    }

    .dashboard-title {
      font-weight: 700;
      color: #157347;
      letter-spacing: 1px;
    }

    .card {
      border: none;
      border-radius: 18px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      height: 320px;
      background: #ffffff;
    }

    .card:hover {
      transform: translateY(-7px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      background: linear-gradient(180deg, #f6fff7, #ffffff);
    }

    .card-title {
      font-weight: 700;
      color: #155d39;
      margin-bottom: 1rem;
      font-size: 1.3rem;
    }

    .card ul {
      list-style: none;
      padding-left: 0;
      color: #333;
      font-size: 1.05rem;
    }

    .card ul li {
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .card a {
      color: #157347;
      text-decoration: none;
      transition: color 0.2s ease;
      font-weight: 500;
    }

    .card a:hover {
      color: #0b4d2c;
      text-decoration: underline;
    }

    .btn-success {
      background-color: #198754;
      border: none;
      font-weight: 600;
      padding: 10px 20px;
      border-radius: 10px;
      transition: background-color 0.2s ease;
    }

    .btn-success:hover {
      background-color: #146c43;
    }

    .card-container {
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <h2 class="text-center mb-5 dashboard-title">ðŸŒ¿ Admin Dashboard</h2>

    <div class="card-container">

      <!-- My Profile -->
      <div class="card p-4 text-center col-md-3 col-sm-6">
        <h5 class="card-title">My Profile</h5>
        <ul class="text-start">
          <li><a href="/edit-admin">ðŸ‘¤ Edit Admin Information</a></li>
          <li><a href="/contactMessages">ðŸ“„ View Contact Messages</a></li>
        </ul>
      </div>

      <!-- Pending NGOs -->
      <div class="card p-4 text-center col-md-3 col-sm-6">
        <h5 class="card-title mb-3">Pending NGOs</h5>
        <p class="text-muted">NGOs waiting for approval</p>
        <form action="/pending_ngos" method="get">
          <button type="submit" class="btn btn-outline-success mt-4 px-4">View Pending NGOs</button>
        </form>
      </div>

      <!-- Manage NGOs -->
      <div class="card p-4 text-center col-md-3 col-sm-6">
        <h5 class="card-title mb-3">Manage NGOs</h5>
        <p class="text-muted">View & manage approved NGOs</p>
        <form action="/all_ngos" method="get">
          <button type="submit" class="btn btn-outline-success mt-4 px-4">View All NGOs</button>
        </form>
      </div>

      <!-- Manage Donors -->
      <div class="card p-4 text-center col-md-3 col-sm-6">
        <h5 class="card-title mb-3">Manage Donors</h5>
        <p class="text-muted">All registered donors</p>
        <form action="/all_donors" method="get">
          <button type="submit" class="btn btn-outline-success mt-4 px-4">View Donors</button>
        </form>
      </div>

      <!-- Manage Volunteers -->
      <div class="card p-4 text-center col-md-3 col-sm-6">
        <h5 class="card-title mb-3">Manage Volunteers</h5>
        <p class="text-muted">View all volunteers</p>
        <form action="/all_volunteers" method="get">
          <button type="submit" class="btn btn-outline-success mt-4 px-4">View Volunteers</button>
        </form>
      </div>

    </div>

    <!-- Logout -->
    <div class="text-center mt-5 mb-4">
      <form action="/admin_logout" method="post">
        <button type="submit" class="btn btn-outline-success px-4">Logout</button>
      </form>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
